@using Business.Models
@model MedioClinic.Models.PageViewModel<EmailViewModel>
@inject XperienceAdapter.Repositories.IMediaFileRepository MediaFileRepository

@{
    Layout = "~/Areas/Identity/Views/Shared/_IdentityLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container mc-section-4">
        <h2>@Html.DisplayFor(m => m.Metadata.Title)</h2>
        <section class="row section col xl5 l9 m12 s12">
            <div class="card-panel white">
                @Html.ValidationSummary()
                @Html.EditorFor(m => m.Data)
                <div class="section">
                    <button class="btn waves-effect waves-light" type="submit">@ResHelper.GetString("Identity.Account.ResetPassword.Title")</button>
                </div>
            </div>
        </section>
    </div>
}
