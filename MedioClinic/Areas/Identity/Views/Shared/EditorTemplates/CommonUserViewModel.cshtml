@using Kentico.Membership.Web.Mvc
@model Identity.Models.Profile.CommonUserViewModel
@inject Microsoft.Extensions.Options.IOptions<Business.Configuration.XperienceOptions> Options

<section class="row section col xl6 l6 m6 s12">
    <div class="card-panel white">
        <div class="section">
            <img src="@Url.Kentico().AvatarUrl(Model.UserName, pathToDefaultAvatar: Options?.Value?.IdentityOptions?.PathToDefaultAvatar)" alt="@ResHelper.GetString("Identity.Profile.Avatar")" />
            @Html.MedioClinicInputFor(m => m.AvatarFile)
        </div>
    </div>
</section>
<section class="row section col xl6 l6 m6 s12">
    <div class="card-panel white">
        <section class="section">
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.UserName)
            @Html.MedioClinicInputFor(m => m.FirstName)
            @Html.MedioClinicInputFor(m => m.LastName)
            @* TODO: Make datepicker work (https://materializecss.com/pickers.html). *@
            @Html.MedioClinicInputFor(m => m.DateOfBirth, additionalViewData: new { @class = "datepicker" })
            @Html.MedioClinicInputFor(m => m.Gender)
            @Html.MedioClinicInputFor(m => m.Nationality, templateName: "Country")
        </section>
        <section class="section">
            @Html.MedioClinicInputFor(m => m.City)
            @Html.MedioClinicInputFor(m => m.Street)
            @Html.EditorFor(m => m.EmailViewModel)
            @Html.MedioClinicInputFor(m => m.Phone)
        </section>
    </div>
</section>

