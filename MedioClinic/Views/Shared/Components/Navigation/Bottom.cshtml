@model Dictionary<string, Business.Dtos.NavigationItem>
@inject CMS.Core.ILocalizationService LocalizationService

@{
    var currentCulture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name;
    var childItems = Model?[currentCulture].ChildItems;
}

<h5 class="white-text">@LocalizationService.GetString("ViewComponent.Navigation.Bottom.Navigation")</h5>
<ul>
    @if (childItems?.Any() == true)
    {
        foreach (var item in childItems)
        {
            <partial name="_ListItemWithLink" model="@(item.RelativeUrl, item.Name, "white-text")" />
        }
    }
</ul>